{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"env": [
				"*_API_KEY",
				"*_SECRET",
				"GITHUB_*",
				"LANGFUSE_*",
				"POSTGRES_*",
				"REDIS_URL",
				"SIGNOZ_*",
				"STRIPE_*",
				"SMTP_*",
				"SUPABASE_*",
				"GTM_ID",
				"SENTRY_*",
				"INVITE_OAUTH_STATE_SALT",
				"INTERNAL_USER_EMAIL_DOMAIN",
				"BLOB_READ_WRITE_TOKEN",
				"BLOB_URL",
				"OFFICIAL_VECTOR_STORE_TEAM_DB_ID",
				"OFFICIAL_GITHUB_REPOSITORY_INDEX_IDS",
				"OFFICIAL_DOCUMENT_VECTOR_STORE_IDS",
				"TOKEN_ENCRYPTION_KEY",
				"SEND_EMAIL_DEBUG",
				"SAMPLE_APP_WORKSPACE_IDS",
				"INNGEST_*",
				"OTEL_*",
				"GOOGLE_OAUTH_CLIENT_*",
				"GOOGLE_VERTEX_*",
				"GOOGLE_CLIENT_EMAIL",
				"GOOGLE_PRIVATE_*",
				"WAITUNTIL_OFFSET_MILLIS",
				"EDGE_CONFIG",
				"TRIGGER_SECRET_KEY"
			],
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env.production.local",
				".env.local",
				".env.production",
				".env"
			],
			"outputs": [".next/**", "!.next/cache/**", "out/**"]
		},
		"clean": {},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	}
}
